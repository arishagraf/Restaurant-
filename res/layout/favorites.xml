<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <androidx.cardview.widget.CardView
        android:layout_width="172dp"
        android:layout_height="247dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="172dp"
            android:layout_height="247dp"
            android:layout_gravity="center">


            <View
                android:id="@+id/image"
                android:layout_width="172dp"
                android:layout_height="158dp"
                android:background="@drawable/food2" />


            <View
                android:id="@+id/bottom"
                android:layout_width="172dp"
                android:layout_height="95dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="153dp"
                android:background="@drawable/bottomdrawable" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/food3"
                app:civ_border_overlay="true" />

            <TextView
                android:id="@+id/kadai_panee"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="175dp"
                android:gravity="top"
                android:text="@string/kadai_panee" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="219dp"
                android:gravity="right|top"
                android:text="RS"
                android:textAppearance="@style/some_id"
                android:textSize="12dp" />

            <Button
                android:id="@+id/rectangle_1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle" />

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="ADD"
                android:textAppearance="@style/add" />


            <View
                android:id="@+id/line_6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ic_add" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>