<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <androidx.cardview.widget.CardView
        android:id="@+id/top_navigat"
        android:layout_width="411dp"
        android:layout_height="128dp"
        android:layout_marginTop="-24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_navigatplace">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/vector"
        android:layout_width="11.67dp"
        android:layout_height="19.8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:src="@drawable/vectorbacknew"
        />
        <TextView
        android:id="@+id/order_place"
        android:layout_width="178dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30.49dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="@string/order_place"
        android:textAppearance="@style/order_place"
            android:textStyle="bold"
        android:gravity="top"
        />
    </LinearLayout>
        <TextView
            android:id="@+id/congratulat"
            android:layout_width="328dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="64dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:text="@string/congratulat"
            android:textAppearance="@style/congratulat"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/line_29"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:background="@drawable/line_29"
        />
    <ImageView
        android:id="@+id/vectordown"
        android:layout_width="11.67dp"
        android:layout_height="19.8dp"
        android:layout_marginLeft="22.1dp"
        android:layout_below="@id/line_29"
        android:src="@drawable/vector4down" />
    <TextView
        android:id="@+id/bestsellers"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="116dp"
        android:text="@string/bestsellers"
        android:textAppearance="@style/bestsellers"
        android:gravity="top"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="634dp">
        <ImageView
            android:id="@+id/right"
            android:layout_width="11.67dp"
            android:layout_height="19.8dp"
            android:layout_marginLeft="22.49dp"
            android:src="@drawable/vector4right" />
        <TextView
            android:id="@+id/trending_di"
            android:layout_width="126dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="49dp"
            android:layout_alignParentTop="true"
            android:text="@string/trending_di"
            android:textAppearance="@style/trending_di"
            android:gravity="top"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="678.1dp">
        <ImageView

            android:layout_width="11.67dp"
            android:layout_height="19.8dp"
            android:layout_marginLeft="22.49dp"
            android:src="@drawable/vector4right" />
        <TextView
            android:id="@+id/new_arrivals"
            android:layout_width="126dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="49dp"
            android:layout_alignParentTop="true"
            android:text="@string/new_arrivals"
            android:textAppearance="@style/new_arrivals"
            android:gravity="top"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="68dp"
        android:layout_marginTop="799dp"
        android:background="@drawable/rectangleas_1"
        android:elevation="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/confirm_add"
                android:layout_width="145dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="9.5dp"
                android:text="Close Order"
                android:textAllCaps="true"

                android:gravity="top"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="194dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rectangle_3orange"
                    />
                <TextView
                    android:id="@+id/confirm_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="4dp"
                    android:text="View Cart"
                    android:textAllCaps="true"

                    android:gravity="top"
                    />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>