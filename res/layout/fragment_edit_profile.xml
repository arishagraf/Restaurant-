<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andrroid="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/pic_change"
            android:layout_width="wrap_content"
            android:layout_height="100dp"

            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/boarder_image_view"
                android:elevation="10dp"
                android:src="@drawable/food2" />

            <TextView
                android:id="@+id/mark_antony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:text="Change Photo"
                android:textAppearance="@style/mark_antony"
                android:textSize="25sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pic_change"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_txt"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:textAppearance="@style/mark_antony"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/name_edit"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:hint="Naaniz Pvt Limited"
                android:inputType="textCapWords"
                android:textSize="20sp" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Email"
                android:textAppearance="@style/mark_antony"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/gmail_edit"
                android:textColor="#000000"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:hint="abc@gmail.com"
                android:inputType="textCapWords"
                android:textSize="20sp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_id"
            android:orientation="vertical">

            <TextView
                    android:id="@+id/dob_text"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="DOB"
                    android:textAppearance="@style/mark_antony"
                    android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:hint="DD/MM/YY"
                    android:id="@+id/dob_edit"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/calendar_button"
                    android:layout_width="20dp"
                    android:layout_marginLeft="200dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|right"
                    />

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phone"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Phone Number"
                android:textAppearance="@style/mark_antony"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/phone_edit"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:hint="+123 456 789"
                android:inputType="number"
                android:textSize="20sp" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/customer_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_no"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Location"
                android:textAppearance="@style/mark_antony"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/location_edit"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:hint="LIME CITY"
                android:inputType="textCapWords"
                android:textSize="20sp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_location"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/language_pref_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#808080"
                    android:id="@+id/pref_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Language Preference"
                    android:textAppearance="@style/mark_antony"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spinner"

                    android:layout_below="@id/pref_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    />




            </LinearLayout>





            <Button

                android:id="@+id/done"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textStyle="bold" />




        </LinearLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bot_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/language"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dp"
            android:background="@android:color/white"
            app:itemBackground="@android:color/white"
            app:itemIconTint="@android:color/black"
            app:itemTextColor="@android:color/black"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bot_newhome_menu" />


    </RelativeLayout>

</ScrollView>