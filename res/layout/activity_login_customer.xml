<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.setup.login.LoginCustomerActivity">
    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/app_icon"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="280dp"/>
    <EditText
        android:id="@+id/cust_phone_login"
        android:layout_width="280dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/phone_number_edittext"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/cust_otp_login"
        android:layout_width="280dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/enter_otp"
        android:inputType="number"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/button_verify"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Send OTP"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:background="@drawable/mybutton"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/note_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/sign_up_instead"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/sign_up_ul"
        android:textColor="@color/colorAccent" />



</LinearLayout>